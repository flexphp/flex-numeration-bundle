{% trans_default_domain 'provider' %}
{% extends 'form/layout.html.twig' %}

{% block title %}{% trans %}title.show{% endtrans %}{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">
                {% trans %}entity{% endtrans %}: {{ provider.id }}
            </h3>
            <div class="toolbar ml-auto">
                <a href="{{ path('flexphp.numeration.providers.index') }}" class="btn btn-outline-secondary">
                    <i class="fa fa-list-ol" aria-hidden="true"></i>
                    <span class="btn-text">{% trans from 'messages' %}action.list{% endtrans %}</span>
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="form-group"><label>{% trans %}label.type{% endtrans %}</label><div class="form-control-plaintext">{{ provider.type }}</div></div>
            <div class="form-group"><label>{% trans %}label.name{% endtrans %}</label><div class="form-control-plaintext">{{ provider.name }}</div></div>
            <div class="form-group"><label>{% trans %}label.username{% endtrans %}</label><div class="form-control-plaintext">{{ provider.username }}</div></div>
            <!-- <div class="form-group"><label>{% trans %}label.password{% endtrans %}</label><div class="form-control-plaintext">{{ provider.password }}</div></div> -->
            <div class="form-group"><label>{% trans %}label.url{% endtrans %}</label><div class="form-control-plaintext">{{ provider.url }}</div></div>
            <div class="form-group"><label>{% trans %}label.isActive{% endtrans %}</label><div class="form-control-plaintext">{% if provider.isActive %}{% trans from 'messages' %}label.yes{% endtrans %}{% else %}{% trans from 'messages' %}label.no{% endtrans %}{% endif %}</div></div>
            <div class="form-group"><label>{% trans %}label.createdAt{% endtrans %}</label><div class="form-control-plaintext">{{ provider.createdAt ? provider.createdAt|date('Y-m-d H:i:s', app.user.timezone) : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.updatedAt{% endtrans %}</label><div class="form-control-plaintext">{{ provider.updatedAt ? provider.updatedAt|date('Y-m-d H:i:s', app.user.timezone) : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.createdBy{% endtrans %}</label><div class="form-control-plaintext">{{ provider.createdByInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.updatedBy{% endtrans %}</label><div class="form-control-plaintext">{{ provider.updatedByInstance.name|default('-') }}</div></div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    {{ include('@FlexPHPNumeration/provider/_delete_form.html.twig', {provider: provider}, with_context = false) }}
                </div>

                <div class="col text-right">
                    <a href="{{ path('flexphp.numeration.providers.edit', {id: provider.id}) }}" class="btn btn-outline-primary">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                        <span class="btn-text">{% trans from 'messages' %}action.edit{% endtrans %}</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
